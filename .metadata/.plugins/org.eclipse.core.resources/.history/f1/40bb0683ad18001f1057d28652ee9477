package tests;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.Parameters;
import org.testng.annotations.Test;

public class Register {
	
	@Parameters("URL")
	@Test(priority=1)
	public void registerWithMandatoryFields(String url) {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(url);
		
		Assert.assertTrue(true);
		
		driver.quit();
		
	}
	
	@Parameters("URL")
	@Test(priority=2)
	public void registerWithAllFields(String url) {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(url);
		
		Assert.assertTrue(true);
		
		driver.quit();
		
	}
	
	@Parameters("URL")
	@Test(priority=3)
	public void registerWithInvalidEmailAddress(String url) {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(url);
		
		Assert.assertTrue(true);
		
		driver.quit();
		
	}
	
	@Parameters("URL")
	@Test(priority=4)
	public void registerWithoutEnteringAnyFields(String url) {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(url);
		
		Assert.assertTrue(true);
		
		driver.quit();
		
	}
	
	@Parameters("URL")
	@Test(priority=5)
	public void regsiterWithInvalidPhoneNumber(String url) {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(url);
		
		Assert.assertTrue(true);
		
		driver.quit();
		
	}
	
	@Parameters("URL")
	@Test(priority=6)
	public void registerWhenPasswordAndConfirmPasswordsMismatch(String url) {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get(url);
		
		Assert.assertTrue(true);
		
		driver.quit();
		
	}

}
