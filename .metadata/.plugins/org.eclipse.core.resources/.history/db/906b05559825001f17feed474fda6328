package pageobjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class SearchPage {
	
	WebDriver driver;
	
	public SearchPage(WebDriver driver) {
		this.driver = driver;
	}
	
	private WebElement validProduct;
	private WebElement noProductMessage;
	
	public boolean displayStatusOfValidProduct() {
		validProduct = driver.findElement(By.linkText("HP LP3065"));
		return validProduct.isDisplayed();
	}
	
	public String retrieveNoProductMessage() {
		noProductMessage = driver.findElement(By.xpath("//input[@id='button-search']/following-sibling::p"));
		return noProductMessage.getText();
	}

}
